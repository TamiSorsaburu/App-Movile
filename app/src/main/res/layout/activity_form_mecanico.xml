<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="697dp"
        android:background="@drawable/background_dorado"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/titulo2"
            android:textAlignment="center"
            android:layout_margin="15dp"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/background_btn"
            android:hint="Nombre"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editapellido"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/background_btn"
            android:hint="@string/inpApellido"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editDireccion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/background_btn"
            android:hint="@string/inpDireccion"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editaCelular"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/background_btn"
            android:hint="@string/inpCelular"
            android:padding="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:text="@string/inpServicio"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:text="@string/inpConsulta"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/descripcion4"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="italic" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blanco">

            <Button
                android:id="@+id/button_confirmar"
                android:layout_width="114dp"
                android:layout_height="49dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="245dp"
                android:layout_marginBottom="99dp"
                android:background="@drawable/background_dorado"
                android:onClick="confirmar"
                android:padding="10dp"
                android:text="@string/botÃ³n_confirmar"
                android:textColor="@color/blanco"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_cancelar"
                android:layout_width="116dp"
                android:layout_height="49dp"
                android:layout_marginStart="246dp"
                android:layout_marginTop="69dp"
                android:layout_marginEnd="49dp"
                android:layout_marginBottom="99dp"
                android:background="@drawable/background_dorado"
                android:onClick="cancelar"
                android:padding="10dp"
                android:text="@string/cancelar"
                android:textColor="@color/blanco"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>