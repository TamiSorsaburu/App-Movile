<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crud.AgregarCliente">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/background_main_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/infoPersonal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Cargar Cliente"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <ImageView
            android:id="@+id/imagePerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:contentDescription="ImgPerfil"
            app:layout_constraintEnd_toEndOf="@+id/infoPersonal"
            app:layout_constraintStart_toStartOf="@+id/infoPersonal"
            app:layout_constraintTop_toBottomOf="@+id/infoPersonal"
            app:srcCompat="@mipmap/ellipse" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="389dp"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonGuardar"
            app:layout_constraintEnd_toEndOf="@+id/infoPersonal"
            app:layout_constraintStart_toStartOf="@+id/infoPersonal"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/textNombre"
                android:layout_width="167dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autofillHints="name"
                android:hint="@string/inpip1"
                android:inputType="textPersonName"></EditText>

            <EditText
                android:id="@+id/textApellido"
                android:layout_width="167dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autofillHints="name"
                android:hint="@string/inpip2"
                android:inputType="textPersonName"
                android:minWidth="48dp"
                android:minHeight="48dp">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/infoPersonal"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintStart_toStartOf="@+id/infoPersonal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

            <EditText
                android:id="@+id/textTelefono"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="phone"
                android:hint="@string/inpip3"
                android:inputType="phone"
                android:minWidth="48dp"
                android:minHeight="48dp">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintHorizontal_bias="0.406"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <EditText
                android:id="@+id/textProvincia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autofillHints="postalAddress"
                android:hint="@string/inpip4"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp">

            </EditText>

            <EditText
                android:id="@+id/textCalle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autofillHints="postalAddress"
                android:hint="@string/inpip5"
                android:inputType="text">

            </EditText>

            <EditText
                android:id="@+id/textAltura"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autofillHints="postalAddress"
                android:hint="@string/inpip6"
                android:inputType="number">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="346dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="296dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="318dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/textLocalidad"
                android:layout_width="208dp"
                android:layout_height="48dp"
                android:autofillHints="postalAddress"
                android:hint="@string/inpip7"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/textPostal"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:autofillHints="postalAddress"
                android:hint="Codigo Postal"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewInfoVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/tituloip2"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
            app:layout_constraintHorizontal_bias="0.64"
            app:layout_constraintStart_toStartOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/textViewInfoVehiculo">

            <EditText
                android:id="@+id/textMarca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="postalAddress"
                android:hint="@string/inpip8"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
            app:layout_constraintStart_toStartOf="@+id/linearLayout5"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <EditText
                android:id="@+id/textModelo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autofillHints="postalAddress"
                android:hint="@string/inpip9"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/textPatente"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/inpip10"
                android:inputType="text" />
        </LinearLayout>


        <Button
            android:id="@+id/buttonGuardar"
            android:layout_width="347dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="545dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="81dp"
            android:background="@drawable/btn_color"
            android:onClick="onClick"
            android:text="Registrar cliente"
            android:textColor="@color/blanco"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="103dp"
            android:layout_height="48dp"
            android:layout_marginStart="255dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_color"
            android:onClick="botonCancelar"
            android:text="@string/btn_ipCancelar"
            android:textColor="@color/blanco"
            app:layout_constraintEnd_toEndOf="@+id/buttonGuardar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonGuardar" />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="261dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color"
            android:onClick="btnListarClientes"
            android:text="Lista clientes"
            android:textColor="@color/blanco"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/buttonGuardar"
            app:layout_constraintTop_toBottomOf="@+id/buttonGuardar" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>